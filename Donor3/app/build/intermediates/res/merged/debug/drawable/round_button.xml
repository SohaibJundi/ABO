<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <corners android:radius="5dp" />
            <solid android:color="@color/primary"/>
            <stroke android:width="1dip" android:color="@color/primary" />
            <size android:width="150dp" android:height="150dp"/>
            <gradient android:angle="-90" android:startColor="@color/primary" android:endColor="@color/primary_darker"  />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="oval">
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/primary" />
            <solid android:color="@color/primary"/>
            <size android:width="150dp" android:height="150dp"/>

        </shape>
    </item>


    <item>
        <shape android:shape="oval">
            <corners android:radius="5dp" />
            <solid android:color="@color/primary"/>
            <stroke android:width="1dip" android:color="@color/primary" />
            <size android:width="150dp" android:height="150dp"/>
            <gradient android:angle="-90" android:startColor="@color/primary_darker" android:endColor="@color/primary_dark"  />
        </shape>
    </item>


</selector>